<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <COMReference Include="TcSysManRMLib">
      <WrapperTool>tlbimp</WrapperTool>
      <VersionMinor>0</VersionMinor>
      <VersionMajor>1</VersionMajor>
      <Guid>7b75909c-bb93-4b6c-814b-6378d36c2c58</Guid>
      <Lcid>0</Lcid>
      <Isolated>false</Isolated>
      <EmbedInteropTypes>true</EmbedInteropTypes>
    </COMReference>
  </ItemGroup>

    <Target Name="CopySharedAssets" AfterTargets="Build">
	    <ItemGroup>
		    <SharedFiles Include="..\TwinCAT\**\*" />
	    </ItemGroup>

	    <Copy SourceFiles="@(SharedFiles)" DestinationFiles="@(SharedFiles->'$(OutDir)TwinCAT\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>

</Project>
